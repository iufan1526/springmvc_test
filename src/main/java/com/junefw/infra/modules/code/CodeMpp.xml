<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.junefw.infra.modules.code.CodeMpp">

    <resultMap id="resultMapObj" type="com.junefw.infra.modules.code.Code"></resultMap>

	<select id="selectList" resultMap="resultMapObj">
			SELECT 
				a.ifcgSeq
				, a.ifcgName
			FROM 
				nct.infrCodeGroup a
			WHERE 1=1
				AND ifcgDelNy = 0
	</select>
	
	
	<insert id="insert">
			insert into infrCodeGroup(
					
				  ifcgName
				, ifcgDelNy		
			)values(
				#{ifcgName}
				,0
			)
	</insert>
	
	<select id="selectOne" resultMap="resultMapObj">
			SELECT 
				a.ifcgSeq
				, a.ifcgName
			FROM 
				nct.infrCodeGroup a
			WHERE 1=1
				AND ifcgSeq= #{ifcgSeq}
	</select>
	
	<update id="update">
			UPDATE nct.infrCodeGroup SET 
				ifcgName = #{ifcgName}
			WHERE 1=1
				AND ifcgSeq= #{ifcgSeq}
	</update>
	
	
	<select id="selectCodeList" resultMap="resultMapObj">
			SELECT 
				a.ifcdSeq
				, a.ifcdName
				, a.ifcdDelNy
			FROM 
				nct.infrCode a
			WHERE 1=1
				AND ifcdDelNy = 0
	</select>
	
	<insert id="codeInsert">
			insert into infrCode(
					
				  ifcdName
				, ifcdDelNy		
			)values(
				#{ifcdName}
				,0
			)
	</insert>

	
</mapper>